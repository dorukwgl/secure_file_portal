datasource db {
    provider = "mysql"
    url      = env("DEV_DATABASE_URL")
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = []
}

enum EStatus {
    Active
    Disabled
}

enum AccessType {
    Public
    Private
    Closed
}

enum FileCategory {
    CategoryA
    CategoryB
    CategoryC
    CategoryD
    CategoryE
}

enum EUserRoles {
    Admin
    User
}

model Users {
    userId    String    @id @default(cuid())
    fullName  String
    username  String    @unique
    password  String
    status EStatus @default(Active)
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?
    role EUserRoles @default(User)
    sessions Sessions[]
    todos Samples[]
    fileShares FileShare[]
    fileShareAccess FileShareAccess[]
}

model FileShare {
    fileShareId String @id @default(cuid())
    fileName String
    filePath String
    accessType AccessType @default(Private)
    sharedBy String
    user Users @relation(fields: [sharedBy], references: [userId])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime?
    fileShares FileShareAccess[]
    category FileCategory @default(CategoryA)
}

model FileShareAccess {
    fileShareAccessId String @id @default(cuid())
    fileShareId String
    userId String
    fileShare FileShare @relation(fields: [fileShareId], references: [fileShareId])
    lastViewedAt DateTime?
    views Int @default(0)
    user Users @relation(fields: [userId], references: [userId])
    sharedAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime?
}

model Samples {
    sampleId String @id @default(cuid())
    title String
    body String?
    userId String
    status EStatus @default(Active)
    user Users @relation(fields: [userId], references: [userId])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime?

    @@fulltext([title, body])
}

model Sessions {
  sessionId BigInt @id @default(autoincrement())
  session String @unique
  userId String
  role EUserRoles
  user Users @relation(fields: [userId], references: [userId])
  createdAt DateTime @default(now()) @db.Timestamp(3)
  deletedAt DateTime?
  expiresAt DateTime @db.Timestamp(3)
}

